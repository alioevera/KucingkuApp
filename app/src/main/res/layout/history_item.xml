<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvReservationIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation ID:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReservationId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvReservationIdLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5" />

        <TextView
            android:id="@+id/tvUserNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReservationId"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvUserNameLabel"
            app:layout_constraintTop_toBottomOf="@id/tvReservationId"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvPlaceNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Name:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvPlaceNameLabel"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvReservationDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Date:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvReservationDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvReservationDateLabel"
            app:layout_constraintTop_toBottomOf="@id/tvPlaceName"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStartTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReservationDate"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvStartTimeLabel"
            app:layout_constraintTop_toBottomOf="@id/tvReservationDate"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvStatusLabel"
            app:layout_constraintTop_toBottomOf="@id/tvStartTime"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
