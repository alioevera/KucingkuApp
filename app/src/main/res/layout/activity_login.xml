<!-- res/layout/activity_main.xml -->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">

    <!-- Container for forms -->
    <LinearLayout
        android:id="@+id/container_forms"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Forms container -->
        <LinearLayout
            android:id="@+id/forms_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sign in and sign up forms -->
            <LinearLayout
                android:id="@+id/signin_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Sign in form -->
                <LinearLayout
                    android:id="@+id/sign_in_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_sign_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign in"
                        android:textSize="24sp"
                        android:textColor="#444"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:id="@+id/input_field_email_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#f0f0f0"
                        android:padding="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_email_signin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_email"
                            android:tint="#acacac"/>

                        <EditText
                            android:id="@+id/edittext_email_signin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="Email"
                            android:inputType="textEmailAddress"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/input_field_password_signin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="#f0f0f0"
                        android:padding="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_password_signin"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_password"
                            android:tint="#acacac"/>

                        <EditText
                            android:id="@+id/edittext_password_signin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:hint="Password"
                            android:inputType="textPassword"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/button_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_button_login"
                        android:text="Login"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        android:gravity="center"/>

                </LinearLayout>

                <!-- Sign up form (similar structure as sign in form) -->
                <!-- Include sign up form layout here -->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Panels container -->
    <LinearLayout
        android:id="@+id/panels_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Left panel -->
        <LinearLayout
            android:id="@+id/left_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gradient_left_panel"
            android:gravity="center">

            <ImageView
                android:id="@+id/image_left_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                android:scaleType="centerInside"/>

        </LinearLayout>

        <!-- Right panel -->
        <LinearLayout
            android:id="@+id/right_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gradient_right_panel"
            android:gravity="center">

            <!-- Content in right panel -->
            <TextView
                android:id="@+id/content_right_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to our app!"
                android:textSize="24sp"
                android:textColor="#fff"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
